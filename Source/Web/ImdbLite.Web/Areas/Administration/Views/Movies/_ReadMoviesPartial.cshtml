@model IEnumerable<ImdbLite.Web.Areas.Administration.ViewModels.Movies.MovieIndexViewModel>

<table class="table">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Poster)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.Image(item.Poster.Content, item.Poster.Type, item.Title, new { @class = "img-responsive" })
                </td>
                <td>
                    @Html.ActionLink("Edit", "Update", "Movies", new { area = GlobalConstants.AdminArea, id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Delete", "Delete", "Movies", new { area = GlobalConstants.AdminArea, id = item.Id }, new { data_modal = "", @class = "btn btn-default" })
                    @Html.ActionLink("Permanent Delete", "ActualDelete", "Movies", new { area = GlobalConstants.AdminArea, id = item.Id }, new { data_modal = "", @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

@Scripts.Render("~/bundles/movies-delete")
