@model IEnumerable<ImdbLite.Web.Areas.Administration.ViewModels.Celebrities.CelebrityIndexViewModel>

<table class="table">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.Image(item.Photo.Content, item.Photo.Type, item.FullName, new { @class = "img-responsive" })
                </td>
                <td>
                    @Html.ActionLink("Edit", "Update", "Celebrities", new { area = GlobalConstants.AdminArea, id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Delete", "Delete", "Celebrities", new { area = GlobalConstants.AdminArea, id = item.Id }, new { data_modal = "", @class = "btn btn-default" })
                    @Html.ActionLink("Permanent Delete", "ActualDelete", "Celebrities", new { area = GlobalConstants.AdminArea, id = item.Id }, new { data_modal = "", @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

@Scripts.Render("~/bundles/celebrities-delete")

