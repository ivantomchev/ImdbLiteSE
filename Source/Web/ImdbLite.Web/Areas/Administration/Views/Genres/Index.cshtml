@model IEnumerable<GenreDetailsViewModel>

@{
    ViewBag.Title = "Genres";
}

<h2>@ViewBag.Title</h2>

<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<div class="row">
    @Html.ActionLink("New Genre", "Create", "Genres", new { area = GlobalConstants.AdminArea }, new { data_modal = "", @class = "btn btn-default" })
</div>

<div id="genres-list" class="row">
    @Html.Partial("_ReadGenresPartial", Model)
</div>
