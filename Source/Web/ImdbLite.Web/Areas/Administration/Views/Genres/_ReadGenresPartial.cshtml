@model IEnumerable<GenreDetailsViewModel>

<table class="table table-bordered">
    <tr>
        <th>
            Name
        </th>
        <th>
            Created On
        </th>
        <th>
            Modified On
        </th>
        <th>
            Controls
        </th>
    </tr>
    @foreach (var genre in Model)
    {
        <tr>
            <td>
                @genre.Type
            </td>
            <td>
                @genre.CreatedOn
            </td>
            <td>
                @genre.ModifiedOn
            </td>
            <td>
                @Html.ActionLink("Edit", "Update", "Genres", new { area = GlobalConstants.AdminArea, id = genre.Id }, new { data_modal = "", @class = "btn btn-default" })
                @Html.ActionLink("Delete", "Delete", "Genres", new { area = GlobalConstants.AdminArea, id = genre.Id }, new { data_modal = "", @class = "btn btn-default" })
                @Html.ActionLink("Permanent Delete", "ActualDelete", "Genres", new { area = GlobalConstants.AdminArea, id = genre.Id }, new { data_modal = "", @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>

@Scripts.Render("~/bundles/modal")